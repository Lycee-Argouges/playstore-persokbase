<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.content.ContentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/text_kres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                style="@style/Theme.PersoKbase.WebviewStyle"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/B1_kres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/ContentTextB"
                    tools:ignore="MissingConstraints"
                    app:cornerRadius="16dp"
                    style="@style/Theme.PersoKbase.BoutonStyle" />
            </RelativeLayout>

            <WebView
                android:id="@+id/text_kres_sub1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                style="@style/Theme.PersoKbase.WebviewStyle"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/B2_kres_sub1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/ContentTextB"
                    tools:ignore="MissingConstraints"
                    app:cornerRadius="16dp"
                    style="@style/Theme.PersoKbase.BoutonStyle" />
            </RelativeLayout>

            <WebView
                android:id="@+id/text_kres_sub2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                style="@style/Theme.PersoKbase.WebviewStyle"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/B3_kres_sub2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/ContentTextB"
                    tools:ignore="MissingConstraints"
                    app:cornerRadius="16dp"
                    style="@style/Theme.PersoKbase.BoutonStyle" />
            </RelativeLayout>

            <WebView
                android:id="@+id/text_kres_sub3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                style="@style/Theme.PersoKbase.WebviewStyle"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/B4_kres_sub3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/ContentTextB"
                    tools:ignore="MissingConstraints"
                    app:cornerRadius="16dp"
                    style="@style/Theme.PersoKbase.BoutonStyle" />
            </RelativeLayout>

            <WebView
                android:id="@+id/text_kres_sub4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                style="@style/Theme.PersoKbase.WebviewStyle"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/B5_kres_sub4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/ContentTextB"
                    tools:ignore="MissingConstraints"
                    app:cornerRadius="16dp"
                    style="@style/Theme.PersoKbase.BoutonStyle" />
            </RelativeLayout>

            <WebView
                android:id="@+id/text_kres_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                style="@style/Theme.PersoKbase.WebviewStyle"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="16dp"/>
        </LinearLayout>
    </ScrollView>

